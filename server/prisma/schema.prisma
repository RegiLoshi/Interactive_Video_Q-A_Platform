generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String         @unique
  name         String
  last_name    String
  role         Role           @default(RESPONDER)
  created_at   DateTime       @default(now())
  password     String         @default("")
  user_id      String         @id @default(uuid())
  answers      Answer[]
  questions    Question[]     @relation("UserQuestions")
  surveys      Survey[]       @relation("UserSurveys")
  surveyVideos Survey_Video[]
}

model Survey {
  survey_id    String         @id @default(uuid())
  title        String
  description  String
  created_at   DateTime       @default(now())
  authorId     String
  questions    Question[]
  author       User           @relation("UserSurveys", fields: [authorId], references: [user_id])
  surveyVideos Survey_Video[]
}

model Question {
  title       String
  authorId    String
  category    Category
  question_id String         @id @default(uuid())
  surveyId    String
  answers     Answer[]
  author      User     @relation("UserQuestions", fields: [authorId], references: [user_id])
  survey      Survey   @relation(fields: [surveyId], references: [survey_id])
}

model Answer {
  created_at DateTime @default(now())
  answer_Id  String         @id @default(uuid())
  authorId   String
  questionId String
  surveyId   String
  text       String
  author     User     @relation(fields: [authorId], references: [user_id])
  question   Question @relation(fields: [questionId], references: [question_id])
}

model Survey_Video {
  servey_video_id String         @id @default(uuid())
  question_link   String
  surveyId        String
  uploaderId      String
  survey          Survey @relation(fields: [surveyId], references: [survey_id])
  uploader        User   @relation(fields: [uploaderId], references: [user_id])
}

enum Role {
  ASKER
  RESPONDER
  ADMIN
}

enum Category {
  TECHNOLOGY
  PROGRAMMING
  WEB_DEVELOPMENT
  MOBILE_DEVELOPMENT
  DATA_SCIENCE
  ARTIFICIAL_INTELLIGENCE
  MACHINE_LEARNING
  CYBERSECURITY
  CLOUD_COMPUTING
  MEDICINE
}
